<Page x:Class="Golovin_Vibornov_422.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Golovin_Vibornov_422.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="#F5F5F5">
        <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White" 
                VerticalAlignment="Center" HorizontalAlignment="Center" >
            <StackPanel Width="320">
                <!-- Заголовок страницы -->
                <TextBlock Text="Авторизация в системе" 
                          FontSize="22" FontWeight="Bold" 
                          HorizontalAlignment="Center" Margin="0,0,0,30"
                          Foreground="#0078D4"/>

                <!-- Поле ввода логина -->
                <TextBlock Text="Логин:" FontSize="14" FontWeight="SemiBold" 
                          Margin="0,0,0,5" Foreground="#333333"/>
                <TextBox x:Name="txtLogin" Height="38" FontSize="14" 
                        Padding="10" Margin="0,0,0,15"
                        BorderBrush="#CCCCCC" BorderThickness="1"
                        ToolTip="Введите ваш логин"
                        GotFocus="TextBox_GotFocus"
                        LostFocus="TextBox_LostFocus"/>

                <!-- Поле ввода пароля -->
                <TextBlock Text="Пароль:" FontSize="14" FontWeight="SemiBold" 
                          Margin="0,0,0,5" Foreground="#333333"/>
                <PasswordBox x:Name="txtPassword" Height="38" FontSize="14" 
                            Padding="10" Margin="0,0,0,25"
                            BorderBrush="#CCCCCC" BorderThickness="1"
                            ToolTip="Введите ваш пароль"
                            GotFocus="PasswordBox_GotFocus"
                            LostFocus="PasswordBox_LostFocus"/>

                <!-- Кнопка входа -->
                <Button Content="Войти" Height="42" FontSize="16" FontWeight="SemiBold"
                        Background="#0078D4" Foreground="White" BorderThickness="0"
                        Click="LoginButton_Click" Cursor="Hand"
                        BorderBrush="#005A9E"
                        ToolTip="Нажмите для входа в систему"/>

                <!-- Блок отображения ошибок -->
                <Border x:Name="errorBorder" Background="#FEF7F7" BorderBrush="#F4C7C3" 
                       BorderThickness="1" Padding="10" Margin="0,15,0,0"
                       CornerRadius="4" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚠" FontSize="14" Margin="0,0,8,0" 
                                  Foreground="#D83B01"/>
                        <TextBlock x:Name="lblError" Foreground="#D83B01" FontSize="12" 
                                  TextWrapping="Wrap" TextAlignment="Left"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>