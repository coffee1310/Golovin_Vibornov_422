<Page x:Class="Golovin_Vibornov_422.Pages.AdsManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Golovin_Vibornov_422.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Управление объявлениями">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#0078D4" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="← Назад" Click="BackButton_Click" 
                        Background="Transparent" Foreground="White" BorderThickness="0"
                        Padding="10,5" Cursor="Hand" FontSize="12"
                        ToolTip="Вернуться на предыдущую страницу"/>

                <TextBlock Grid.Column="1" Text="Управление объявлениями" 
                          FontSize="20" FontWeight="Bold" Foreground="White"
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="lblUserInfo" Foreground="White" FontSize="12" 
                              Margin="0,0,15,0" VerticalAlignment="Center"
                              ToolTip="Текущий пользователь системы"/>
                    <Button Content="Выйти" Click="LogoutButton_Click" 
                            Background="Transparent" Foreground="White" BorderThickness="0"
                            Padding="10,5" Cursor="Hand" FontSize="12"
                            ToolTip="Выйти из системы"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1"
                Padding="15,10">
            <StackPanel Orientation="Horizontal">
                <Button Content="➕ Добавить объявление" Click="AddButton_Click" 
                        Background="#0078D4" Foreground="White" BorderThickness="0"
                        Padding="12,6" Cursor="Hand" FontSize="12" FontWeight="SemiBold"
                        ToolTip="Создать новое объявление"/>
                <Button Content="🌐 Все объявления" Click="AllAdsButton_Click" 
                        Background="#666666" Foreground="White" BorderThickness="0"
                        Padding="12,6" Cursor="Hand" FontSize="12" FontWeight="SemiBold"
                        ToolTip="Просмотр всех объявлений системы" 
                        Margin="10,0,0,0"/>
                <Button Content="🔄 Обновить список" Click="RefreshButton_Click" 
                        Background="#107C10" Foreground="White" BorderThickness="0"
                        Padding="12,6" Cursor="Hand" FontSize="12" FontWeight="SemiBold"
                        ToolTip="Обновить данные объявлений" 
                        Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border x:Name="loadingPanel" Grid.Row="0" Background="#FFF4CE" 
                       BorderBrush="#FFD965" BorderThickness="1" Padding="10" 
                       CornerRadius="4" Margin="0,0,0,10" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⏳" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock x:Name="lblLoading" Text="Загрузка данных..." 
                                  FontSize="12" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <ItemsControl Grid.Row="1" x:Name="itemsAds">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                                    CornerRadius="8" Margin="8" Padding="0" 
                                    Width="300" Height="420"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="AdCard_MouseLeftButtonDown">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="180"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Background="#F5F5F5" 
                                            CornerRadius="8,8,0,0">
                                        <Image Stretch="UniformToFill" 
                                               ToolTip="Изображение объявления">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Source" Value="/Images/no-image.jpg"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasImage}" Value="True">
                                                            <Setter Property="Source" Value="{Binding ImageSource}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Border>

                                    <TextBlock Grid.Row="1" Text="{Binding ad_title}" 
                                              FontWeight="Bold" FontSize="14" 
                                              Margin="12,10,12,5" 
                                              TextWrapping="Wrap" 
                                              MaxHeight="40"
                                              TextTrimming="CharacterEllipsis"/>

                                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" 
                                                 Margin="12,0,12,5">
                                        <TextBlock Text="{Binding ad_description}" 
                                                  FontSize="12" TextWrapping="Wrap"
                                                  Foreground="#666666"
                                                  MaxHeight="60"/>
                                    </ScrollViewer>

                                    <Border Grid.Row="3" Background="#F9F9F9" 
                                           Margin="0,5,0,0" Padding="12,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                                <TextBlock Text="{Binding City.city1}" 
                                                          FontSize="11" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding AdType.type1}" 
                                                          FontSize="10" Foreground="#666666"/>
                                                <TextBlock Text="{Binding Category.name}" 
                                                          FontSize="10" Foreground="#666666"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Vertical" 
                                                       HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding price, StringFormat={}{0}₽}" 
                                                          FontSize="14" FontWeight="Bold" 
                                                          Foreground="#0078D4"/>
                                                <TextBlock Text="{Binding ad_post_date, StringFormat=dd.MM.yyyy}" 
                                                          FontSize="9" Foreground="#999999"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <Border Grid.Row="4" Background="{Binding StatusColor}" 
                                           Padding="5,2">
                                        <TextBlock Text="{Binding AdStatus.status1}" 
                                                  FontSize="10" FontWeight="Bold" 
                                                  Foreground="White" 
                                                  HorizontalAlignment="Center"/>
                                    </Border>

                                    <Border Grid.Row="5" Background="#F5F5F5" 
                                           CornerRadius="0,0,8,8" Padding="8">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="✏️ Редактировать" 
                                                    Tag="{Binding id}"
                                                    Click="EditCardButton_Click"
                                                    Background="#107C10" Foreground="White"
                                                    Padding="8,4" BorderThickness="0" Margin="0,0,5,0"
                                                    FontSize="10" FontWeight="SemiBold" Cursor="Hand"
                                                    ToolTip="Редактировать объявление"/>
                                            <Button Content="🗑️ Удалить" 
                                                    Tag="{Binding id}"
                                                    Click="DeleteCardButton_Click"
                                                    Background="#D13438" Foreground="White"
                                                    Padding="8,4" BorderThickness="0" Margin="5,0,0,0"
                                                    FontSize="10" FontWeight="SemiBold" Cursor="Hand"
                                                    ToolTip="Удалить объявление"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border x:Name="emptyStatePanel" Grid.Row="1" Background="#F9F9F9" 
                       Visibility="Collapsed" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" Padding="30" CornerRadius="8">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="📝" FontSize="48" HorizontalAlignment="Center" 
                                  Margin="0,0,0,15"/>
                        <TextBlock Text="У вас пока нет объявлений" FontSize="16" 
                                  FontWeight="SemiBold" HorizontalAlignment="Center"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Создайте первое объявление, нажав на кнопку 'Добавить объявление'" 
                                  FontSize="12" Foreground="#666666" 
                                  TextAlignment="Center" HorizontalAlignment="Center"
                                  Margin="0,0,0,15"/>
                        <Button Content="➕ Создать первое объявление" 
                                Click="AddButton_Click"
                                Background="#0078D4" Foreground="White"
                                Padding="15,8" BorderThickness="0" 
                                FontSize="12" FontWeight="SemiBold" Cursor="Hand"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <StatusBar Grid.Row="3" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StatusBarItem>
                <TextBlock x:Name="lblStatus" Text="Готово" FontSize="11" Foreground="#333333"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="lblCount" Text="Объявлений: 0" FontSize="11" Foreground="#666666"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>